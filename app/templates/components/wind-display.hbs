<div id="holder">
  {{userWeather}}
</div>


<div class="row">
  <div class="col s6">
    <button class="waves-effect waves-light btn" {{action 'weatherNow'}}>Weather Now</button><br>
  </div>
  <div class="col s6">
    <h4>See the wind in a city!</h4>
    <form>
      <div class="input-field">
        <label for="city">Enter a city (without spaces)</label>
        {{input value=city id="city"}}
      </div>
      <button class="waves-effect waves-light btn" {{action 'citySearch'}}>Get Weather</button>
    </form>
    {{weather.cod}}
  </div>
</div>
